<div class="ExportHelper ExportHelper--north js-helper-north"></div>
<div class="ExportHelper ExportHelper--west  js-helper-west"></div>
<div class="ExportHelper ExportHelper--south js-helper-south"></div>
<div class="ExportHelper ExportHelper--east  js-helper-east"></div>
<div class='CanvasExport'>
  <div class="ExportImageView-Header js-header">
    <div class="ExportImageView-Header--inner">
      <div class="ExportImageView--help">Adjust zoom level and canvas size to fit the area you want to export.</div>
    </div>
  </div>
  <% if (show_title || show_description) { %>
  <div class="ExportHelper ExportHelper--header">
    <% if (show_title) { %>
    <h3 class="ExportHelperTitle js-title"><%- title %></h3>
    <% } %>
    <% if (show_description) { %>
    <p class="ExportHelperDescription js-description"><%= cdb.core.sanitize.html(description) %></p>
    <% } %>
  </div>
  <% } %>
  <div class="ExportHelper ExportHelper--legend cartodb-legend-stack js-helper-legend"<% if (legend_style) { %> style="<%= legend_style %>"<% } %>><%= cdb.core.sanitize.html(legend) %></div>
  <div class="ExportHelper ExportHelper--attribution js-helper-attribution"><%= cdb.core.sanitize.html(attribution) %></div>
</div>
