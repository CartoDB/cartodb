<div class='inner'>
  <h1><a href='http://www.cartodb.com' class='logo' id='the_logo'>CartoDB</a></h1>
  <ul class='options'>    
    <% if (!username && !isMobileDevice) { %>
      <li><a href='http://cartodb.com/gallery' class='gallery'>gallery</a></li>
    <% } %>
    
    <% if (!can_fork && !username && !isMobileDevice) { %>
      <li><a href='http://cartodb.com/login' class='clone'>Clone this</a></li>
    <% } %>
    
    <% if (!username) { %>
      <% if (cdb.config.get('account_host') === "cartodb.com" ) { %>
        <li><a class='signup' href='http://cartodb.com/signup'>Sign up</a><li>
      <% } %>
      <li><a href='http://cartodb.com/login' class='border login'>Login</a></li>
    <% } else { %>
      
      <% if (current_view !== 'dashboard' && !isMobileDevice) { %>
        <% if (can_fork && owner_username !== username) { %>
          <!--li><a class='editor clone' href='#/clone-this-<%= current_view %>'>clone in cartodb</a></li-->
        <% } else if (owner_username === username) { %>
          <li><a class='editor edit' href='<%= vis_url %>'>edit in cartodb</a></li>
        <% } %>
      <% } %>
      
      <li> 
        <a class='editor dropdown account' href='<%= urls[0] %>'>
          <% if (avatar_url) { %><img src='<%= avatar_url %>' width='18' title='<%= username %>' alt='<%= username %>' /><% } %><%= username %><span class='separator'></span>
        </a>
      </li>
    <% } %>
  </ul>
</div>