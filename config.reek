IrresponsibleModule:
  enabled: false
DuplicateMethodCall:
  enabled: true
  exclude: []
  max_calls: 2
  allow_calls: []
UncommunicativeVariableName:
  enabled: true
  exclude: []
  reject:
  - !ruby/regexp /[0-9]$/
  - !ruby/regexp /[A-Z]/
  accept:
  - _
# Removed "  - !ruby/regexp /^.$/" to allow single character (frequent at loops and maps)
