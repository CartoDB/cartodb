<article class="tables <%= 'active' if @tables_count > 0 %>">
  <div class="inner">
    <section class="left tables">
      <div class="head">
        <h2>
          <i></i>
          <%= pluralize(@tables_count, 'table', 'tables') %>
        </h2>
        <div class="loader"></div>
        <a href="#" class="toggle"></a>
        <div class="order">
          Order by <a href="#" data-order="modified" class="selected">modified</a> / <a href="#" data-order="created">created</a>
        </div>
      </div>
      <div class="content">
        <ul id="tablelist">
          <%= render :partial => 'shared/flash_message' %>
        </ul>
      </div>
    </section>
    <aside class="right">
      <div class="head">
        <a href="#" class="create border create_new">
          <div class="content">
            <div class="plus"></div>
          </div>
          <div class="title">New table</div>
        </a>
      </div>
      <div class="content">
        <ul></ul>
      </div>
    </aside>
    <div class="paginator"></div>
  </div>
</article>