<div class="mamufas">
  <section class="block modal <%- modal_type %>">
    <a href="#close" class="close">x</a>
    <div class="head">
      <h3><%- title %></h3>
      <% if (description) { %>
        <p class="margin5"><%- description %></p>
      <% } %>
    </div>
    <div class="content"></div>
    <div class="foot">
      <a href="#cancel" class="left cancel <%- cancel_button_classes %>"><%- cancel_title %></a>
      <a href="#duplicate" class="right ok <%- ok_button_classes %>"><%- ok_title %></a>
    </div>
  </section>

  <section class="block modal creating">
    <div class="creating_content"></div>
  </section>

  <section class="block modal error">
    <a href="#close" class="close">x</a>
    <div class="head">
      <h3>An error occurred creating your new map</h3>
    </div>
    <div class="error_content"></div>
    <div class="foot">
      <a href="#go" class="right button cancel grey">Ok, close</a>
    </div>
  </section>
</div>