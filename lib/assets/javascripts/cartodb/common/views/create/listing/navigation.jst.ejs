  <span class="Filters-separator"></span>

  <div class="Filters-row">
    <div class="Filters-type">
      <ul class="Filters-list">
        <li class="Filters-typeItem Filters-searchEnabler">
          <button class="Filters-searchLink js-search-link">
            <i class="Filters-searchLinkIcon iconFont iconFont-Lens"></i>Search
          </button>
        </li>
        <li class="Filters-typeItem Filters-searchItem">
          <form class="Filters-searchForm js-search-form">
            <input class="Filters-searchInput js-search-input" type="text" value="<%- ( tag && (':' + tag) ) || q %>" placeholder="by name or :tag" />
            <% if (tag || q) { %>
              <button type="button" class="Filters-cleanSearch js-clean-search">
                <i class="iconFont iconFont-Close"></i>
              </button>
            <% } %>
          </form>
        </li>
        <li class="Filters-typeItem">
          <button class="Filters-typeLink js-connect <%- listing === 'import' ? 'is-selected' : '' %> <%- !canCreateDataset ? 'is-disabled' : '' %>">
            Connect dataset
          </button>
        </li>
        <% if (createModel.showDatasets()) { %>
          <li class="Filters-typeItem">
            <button class="Filters-typeLink js-datasets <%- listing === 'datasets' && shared !== 'only' && !library ? 'is-selected' : '' %>">
              <% if (totalItems) { %>
                <strong><%- totalItems %></strong>
              <% } %>
              <%- pluralizedContentType.charAt(0).toUpperCase() + pluralizedContentType.substring(1) %>
            </button>
          </li>
          <% if (isInsideOrg) { %>
            <li class="Filters-typeItem">
              <button class="Filters-typeLink js-shared <%- listing === 'datasets' && shared === "only" ? 'is-selected' : '' %>">
                <% if (totalShared) { %>
                  <strong><%- totalShared %></strong>
                <% } %>
                Shared with you
              </button>
            </li>
          <% } %>
        <% } %>
        <li class="Filters-typeItem">
          <button class="Filters-typeLink js-library <%- listing === 'datasets' && library ? 'is-selected' : '' %>">
            Data library
          </button>
        </li>
        <% if (mapTemplatesEnabled && createModel.showDatasets()) { %>
          <li class="Filters-typeItem">
            <button class="Filters-typeLink js-mapTemplates <%- listing === 'templated_workflows' ? 'is-selected' : '' %>">
              Map templates
            </button>
          </li>
        <% } %>
      </ul>
    </div>
    <div class="Filters-order">
      <ul>
        <li class="Filters-typeItem">
          <button class="Filters-typeLink js-create_empty <%- listing === 'scratch' ? 'is-selected' : '' %> <%- !canCreateDataset ? 'is-disabled' : '' %>">
            <%- createFromScratchLabel %>
          </button>
        </li>
      </ul>
    </div>
  </div>
