<div class="table_info">
  <hgroup>
    <h3><a href="/tables/<%= id %>/"><%= name %></a></h3>
    <a href="#change_status" class="status <%= privacy.toLowerCase() %>"><%= privacy %></a>
  </hgroup>
  <hgroup class="options">
    <p class="smaller light"><% print(moment(updated_at).fromNow()); %></p>
    <a href="#delete" class="delete tooltip" data-table="<%= name %>" title="Delete">delete</a>
  </hgroup>
  <p class="light"><% print(description || '') %></p>
  <div class="left">
    <p class="strong uppercase smaller light <%= (description) ? 'margin15' : 'margin5' %>"><%= table_size.toString().bytesToSize() %> Â· <%= rows_counted %> <%= rows_counted==1 ? 'ROW' : 'ROWS' %></p>
  </div>
  <div class="right">
    <div class="right tags <%= (description) ? 'more' : 'less' %>">
      <% var tags = tags.split(","); %>
      <% for(var tag in tags) { %>
        <% if (tags[tag] != "") { %>
          <a href="#/tag/<%= tags[tag] %>/1"><%= tags[tag] %></a>
        <% } %>
      <% } %>
    </div>
  </div>
</div>
