<div class="MergeDatasets">
  <div class="js-sticky-header"></div>
  <div class="MergeDatasets-list">
    <div class="List List--selections">
      <div class="List-row">
        <div class="List-rowItem List-rowItem--compact List-rowItem--withoutBottomBorder List-rowItem--withoutBottomPadding js-left-table"></div>
      </div>
      <div class="List-row is-disabled">
        <div class="List-rowItem List-rowItem--compact List-rowItem--compact">
          <div class="MergeDatasets-rowItem">
            <div class="MergeDatasets-rowItemRadio">
              <div class="RadioButton">
                <button class="RadioButton-input is-checked is-disabled" />
              </div>
            </div>
            <div>
              <div class="DefaultTitle"><%- leftKeyColumn.get('name') %></div>
              <p class="DefaultParagraph DefaultParagraph--tertiary"><%- leftKeyColumn.get('type') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="js-left-columns"></div>
  </div>

  <div class="MergeDatasets-list MergeDatasets-list--2nd">
    <% if (hasSelectedRightTable) { %>
      <div class="List List--selections">
        <div class="List-row">
          <div class="List-rowItem List-rowItem--compact List-rowItem--withoutBottomBorder List-rowItem--withoutBottomPadding js-right-table"></div>
        </div>
        <div class="List-row is-disabled">
          <div class="List-rowItem List-rowItem--compact List-rowItem--compact">
            <div class="MergeDatasets-rowItem">
              <div class="MergeDatasets-rowItemRadio">
                <div class="RadioButton">
                  <button class="RadioButton-input is-checked is-disabled" />
                </div>
              </div>
              <div>
                <div class="DefaultTitle"><%- rightKeyColumn.get('name') %></div>
                <p class="DefaultParagraph DefaultParagraph--tertiary"><%- rightKeyColumn.get('type') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="List">
        <div class="List-row">
          <div class="List-rowItem List-rowItem--compact js-right-tables"></div>
        </div>
      </div>
    <% } %>

    <div class="js-right-columns"></div>

    <% if (hasSelectedRightTable) { %>
      <div class="List js-count-merge-method-info" style="display: none;">
        <div class="List-row MergeDatasets-desc">
          <i class="MergeDatasets-countDescIcon"></i>
          <div class="MergeDatasets-countDesc">
            <p class="DefaultParagraph">
              Count the number of features in your dataset intersecting the geometries of your second dataset.
            </p>
          </div>
        </div>
      </div>
      <div class="List MergeDatasets-list MergeDatasets-fixedAboveFooter">
        <div class="List-row">
          <div class="List-rowItem List-rowItem--compact List-rowItem--withoutSideMargins TabsPanel js-merge-methods"></div>
        </div>
      </div>
    <% } %>
  </div>
</div>
