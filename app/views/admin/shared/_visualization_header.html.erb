  <div class="inner">
    <div class="left">
      <ul class="actions">
        <li><%= link_to "Back", root_path, :class => "back" %></li>
        <li><span class="type">T</span></li>
        <li><h1><%= link_to "", "#/change-title", :class => "title" %></h1></li>
