<% if (option !== 'templates' && option !== "loading") { %>
  <div class="CreateDialog-footerInner <% if (importState !== "scratch" && datasetsState !== "library") { %> is-expanded <% } %>">
    <% if (option === 'listing') { %>

      <% if (listingState === "list") { %>
        <% if (datasetsState === "library") { %>
          <div class="CreateDialog-footerInfo">
            <i class="iconFont iconFont-Info CreateDialog-footerInfoIcon"></i> Once you click over one of these items it will be imported to your account.
          </div>
        <% } else { %>
          <div class="CreateDialog-footerInfo">
            <% if (selectedDatasets.length === 0) { %>
              <i class="iconFont iconFont-Info CreateDialog-footerInfoIcon"></i>Select datasets for your new map (0/<%= maxSelectedDatasets%>)
            <% } else if (selectedDatasets.length < maxSelectedDatasets) { %>
              <%= selectedDatasets.length %> dataset<%= selectedDatasets !== 1 ? 's' : '' %> selected
            <% } else { %>
              <i class="iconFont iconFont-Info CreateDialog-footerInfoIcon"></i>You have reached the max layers for a new map (<%= maxSelectedDatasets %> max)
            <% } %>
          </div>
          <div class="CreateDialog-footerActions">
            <% if (selectedDatasets.length === maxSelectedDatasets && userCanUpgrade) { %>
              <a class="Button Button--main CreateDialog-footerActionsButton is-separated js-upgrade" href="<%= upgradeURL %>">upgrade</a>
            <% } %>
            <button class="Button Button--positive CreateDialog-footerActionsButton js-create_map <%= selectedDatasets.length === 0 ? 'is-disabled' : '' %>">create map</button>
          </div>
        <% } %>
      <% } %>

      <% if (listingState === "import") { %>
        <% if (importState === 'scratch') { %>
          <% if (type === "map") { %>
            <div class="CreateDialog-footerInfo">
              <i class="iconFont iconFont-Info CreateDialog-footerInfoIcon"></i>New on CartoDB? Start with one of <a href="#/templates" class="js-templates">our templates</a>.
            </div>
          <% } %>
        <% } else { %>
          <% if (enabledUpload) { %>
            <div class="CreateDialog-footerInfo">
              <div class="Checkbox <%= isUploadValid ? '' : 'is-disabled' %>">
                <button  class="Checkbox-input <%= typeGuessing ? 'is-checked' : '' %> js-guessing"></button>
                <label class="Checkbox-label">Let CartoDB automatically guess types on import.</label>
              </div>
            </div>
            <div class="CreateDialog-footerActions">
              <button class="Button Button--positive CreateDialog-footerActionsButton <%= isUploadValid ? '' : 'is-disabled' %> js-connect">connect dataset</button>
            </div>
          <% } %>
        <% } %>
      <% } %>

      
    <% } %>

    <% if (option === 'preview') { %>
      <div class="CreateDialog-footerInfo">
        <i class="iconFont iconFont-Info CreateDialog-footerInfoIcon"></i>Take your time to watch this tutorial or skip it and go to your map now
      </div>
      <div class="CreateDialog-footerActions">
        <a href="<%= mapTemplate && mapTemplate.map && mapTemplate.map.url %>" class="Button Button--light CreateDialog-footerActionsButton is-separated">CREATE THIS MAP</a>
        <button class="Button Button--positive CreateDialog-footerActionsButton js-start">go for it</button>
      </div>
    <% } %>
  </div>
<% } %>
