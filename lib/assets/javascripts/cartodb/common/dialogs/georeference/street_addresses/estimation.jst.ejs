<% if (hasEstimation) { %>
  <% if (costInCredits === 0 || hasHardLimit) { %>
    <% if (hasRows) { %>
      <div class="LayoutIcon LayoutIcon--positive">
        <i class="CDB-IconFont CDB-IconFont-dollar CDB-IconFont--super"></i>
      </div>
      <p class="DefaultParagraph DefaultParagraph--normalSize">
        This geocoding operation will have no cost for you!
        <% if (hasHardLimit) { %>
          But it will only geocode as many locations as your available credits permit.
        <% } else { /* aka soft limit */ %>
          After available credits they will cost $<%- blockPriceInDollars %>/1,000 credits.
        <% } %>
      </p>
    <% } else { %>
      <div class="LayoutIcon">
        <i class="CDB-IconFont CDB-IconFont-question"></i>
      </div>
      <p class="DefaultParagraph DefaultParagraph--normalSize">
        No rows will be geocoded. Check the checkbox below to override your columns' values.
      </p>
    <% } %>
  <% } else if (costInCredits > 0) { %>
    <div class="LayoutIcon LayoutIcon--warning">
      <i class="CDB-IconFont CDB-IconFont-dollar CDB-IconFont--super"></i>
    </div>
    <p class="DefaultParagraph DefaultParagraph--normalSize">
      This task could cost you as much as <strong>$<%- costInDollars %></strong> (<%- costInCredits %> extra credits).
      Based on an extra credit cost of $<%- blockPriceInDollars %>/1,000 credits.
    </p>
  <% } else { %>
    <div class="LayoutIcon LayoutIcon--negative">
      <i class="CDB-IconFont CDB-IconFont-dollar CDB-IconFont--super"></i>
    </div>
    <p class="DefaultParagraph DefaultParagraph--normalSize">
      Unfortunately there was a problem estimating cost of this geocoding operation.
    </p>
  <% } %>
<% } else { %>
  <div class="LayoutIcon">
    <i class="CDB-IconFont CDB-IconFont-dollar CDB-IconFont--super"></i>
  </div>
  <p class="DefaultParagraph DefaultParagraph--normalSize">
    Estimating possible cost for this geocoding operationâ€¦
  </p>
<% } %>
