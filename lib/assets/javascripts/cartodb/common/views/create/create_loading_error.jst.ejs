<div class="IntermediateInfo">
<% if (type === "dataset") { %>
  <div class="LayoutIcon LayoutIcon--negative">
    <i class="CDB-IconFont CDB-IconFont-cockroach"></i>
  </div>
  <h4 class="CDB-Text CDB-Size-large u-secondaryTextColor u-bSpace--m u-tSpace-xl">Oouch! There has been an error</h4>
  <p class="CDB-Text CDB-Size-medium u-altTextColor">If the problem persists contact us at <a class="js-mail-link" href="mailto:support@carto.com">support@carto.com</a>.</p>
<% } else { %>
  <div class="LayoutIcon LayoutIcon--negative">
    <i class="CDB-IconFont CDB-IconFont-cloud"></i>
  </div>
  <h4 class="CDB-Text CDB-Size-large u-secondaryTextColor u-bSpace--m u-tSpace-xl">
    <% if ((selectedDatasets && selectedDatasets.length > 0) || currentImport) { %>
      <%- err.title %> <% if (err.error_code) { %>(<%- err.error_code %>)<% } %>
    <% } else { %>
      Error creating the new map
    <% } %>
  </h4>
  <p class="CDB-Text CDB-Size-medium u-secondaryTextColor">
    <% if ((selectedDatasets && selectedDatasets.length > 0) || currentImport) { %>
      <%= cdb.core.sanitize.html(err.what_about) %>
    <% } else { %>
      If the problem persists contact us at <a class="js-mail-link" href="mailto:support@carto.com">support@carto.com</a>.
    <% } %>
  </p>
<% } %>
</div>
