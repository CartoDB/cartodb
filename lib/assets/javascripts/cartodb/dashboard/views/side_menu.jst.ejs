<% var dashboardUrl = router.currentDashboardUrl(); %>
<div class="SideMenuContent">
<ul>
  <li><div class="MenuItem selected" data-params="" data-order="updated_at"><a href="javascript:void(0)">All</a></div></li>
  <li><div class="MenuItem" data-params="/liked"><a href="javascript:void(0)">Favorites<a/></div></li>
  <% if (content_type == "datasets") { %>
    <li><div class="MenuItem" data-params="/imported"><a href="javascript:void(0)">My Data</a></div></li>
  <% } else { %>
    <li><div class="MenuItem" data-params="/locked"><a href="javascript:void(0)">Locked</a></div></li>
    <li><div class="MenuItem" data-params="/samples"><a href="javascript:void(0)">Sample Maps</a></div></li>
  <% } %>
  <% if (content_type == "datasets") { %>
    <li style="margin-top:20px;font-weight:bold">
      <label>Categories</label>
    </li>
    <ul class="CategoryTree">
    <% for (var i = 0, l = categories.length; i < l; ++i) { %>
      <%
        var category = categories[i];
        var categoryId = category.get('id');
        var subCategories = category.get('children');
        var selected = "";
        var expanded = "";
        if (categoryId == current_category) {
          selected = "selected";
        } else if (_.findWhere(subCategories, {id: current_category})) {
          expanded = "expanded";
        }
      %>
      <li>
        <div class="MenuItem <%- selected %> <%- expanded %>" data-category="<%- categoryId %>">
          <div class="ParentChevron"></div>
          <a href="javascript:void(0)"><%- category.get('name') %></a>
        </div>
        <% if (subCategories.length > 0) { %>
          <ul class="SubCategories <%- expanded %> SubCategories-<%- categoryId %>">
          <% for (var s = 0, sl = subCategories.length; s < sl; ++s) { %>
            <% var subCategory = subCategories[s]; %>
            <li class="SubCategory">
              <div class="MenuItem <%- (subCategory.id == current_category ? "selected" : "") %>" data-category="<%- subCategory.id %>"><a href="javascript:void(0)"><%- subCategory.name %></a></div>
            </li>
          <% } %>
          </ul>
        <% } %>
      </li>
  <% } %>
  </ul>
  <% } %>
</ul>
</div>