<header>
  <div class="inner">
    <h1 class="left"><%= link_to "CartoDB", root_path %></h1>
    <ul class="right">
      <li><%= link_to 'dashboard', dashboard_path, :class => selected_if(current_path == dashboard_path) %></li>
      <li class="search">
        <form action="/dashboard/#/search/">
          <input type="text" value="<%= params[:q] %>" name="q" placeholder="Search in your tables" />
          <input type="submit" value="Search" />
        </form>
      </li>
      <li><%= link_to 'public tables', dashboard_public_tables_path, :class => selected_if(current_path == dashboard_public_tables_path) %></a></li>
      <li><%= link_to 'developers', Cartodb.config[:developers_host] %></a></li>
      <% if current_user.admin %>
        <li><%= link_to 'sheriff', superadmin_users_path %></li>
      <% end %>
      <li>
        <a class="dropdown account separator" href="<%= account_url %>"><%= current_user.username %><span>|</span></a>
      </li>
    </ul>
  </div>
</header>
