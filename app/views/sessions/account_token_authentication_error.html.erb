<% content_for :title do %><%= @user ? @user.username : t('sessions.account_error.user') t('sessions.account_error.auth_error') end %>

<div class="CDB-Text <%= @organization.present? ? 'Sessions' : 'Sessions-navy' %>" style="<%= @organization.present? ? background : '' %>">
  <div class="Sessions-content">
    <div class="Sessions-inner">
      <div class="u-inner">
        <div class="Sessions-center Sessions--centered">
          <div class="Sessions-logoContainer">
            <%= render :partial => 'shared/logo', locals: { organization: @organization } %>
          </div>

          <div class="js-info">
            <h1 class="Sessions-title u-tspace-m"><%= t('sessions.account_error.validate_account') %></h1>
              <p class="Sessions-description"><%= t('sessions.account_error.check_email') %></p>

            <% if @user %>
              <p class="Sessions-description"><%= raw t('sessions.account_error.resend_valid', validation_url: CartoDB.url(self, 'resend_validation_mail', :user_id => @user.id)) %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
