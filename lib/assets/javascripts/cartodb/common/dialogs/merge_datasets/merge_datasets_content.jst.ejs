<div class="Dialog-content Dialog-content--expanded">

  <div class="Dialog-contentWrapper">
    <% if (currentStep) { %>
      <button class="NavButton Dialog-backBtn js-back">
        <i class="CDB-IconFont CDB-IconFont-arrowPrev"></i>
      </button>
    <% } %>

    <div class="Dialog-header Dialog-header--expanded <%- currentStep ? 'CreateDialog-header' : '' %>">
      <ul class="CreateDialog-headerSteps">
        <% if (currentStep) { %>
          <% headerSteps.forEach(function(d, i) { %>
            <li class="CreateDialog-headerStep <%- d.isCurrent ? 'is-selected' : '' %>">
              <div class="Dialog-headerIcon">
                <i class="CDB-IconFont <%- d.icon %>"></i>
                <% if (d.isFinished) { %>
                  <span class="Badge Dialog-headerIconBadge">
                    <i class="CDB-IconFont CDB-IconFont-check"></i>
                  </span>
                <% } %>
              </div>
              <p class="Dialog-headerTitle"><%- d.title %></p>
              <p class="Dialog-headerText">Step <%- i + 2 %> of <%- headerSteps.length + 1 %></p>
            </li>
          <% }) %>
        <% } else { %>
          <li class="CreateDialog-headerStep CreateDialog-headerStep--single is-selected">
            <div class="Dialog-headerIcon Dialog-headerIcon--neutral">
              <i class="CDB-IconFont CDB-IconFont-mergeArrow"></i>
            </div>
            <p class="Dialog-headerTitle">Merge with another table</p>
            <p class="Dialog-headerText">Merging is useful if you want to combine data from two datasets into a single new one.</p>
            <p class="Dialog-headerText">You can merge datasets by a column attribute or as a spatial intersection.</p>
          </li>
        <% } %>
      </ul>
    </div>

    <div class="Dialog-body Dialog-body--expanded Dialog-body--create js-scroll">
      <div class="Dialog-bodyInnerExpandedWithPreFooter u-inner">
        <% if (currentStep) { %>
          <div class="MergeDatasets-instructions">
            <p class="DefaultParagraph"><%= currentStep.INSTRUCTIONS_SAFE_HTML || '' %></p>
          </div>
          <div class="js-details"></div>
        <% } else { %>
          <div class="OptionCards js-flavors"></div>
        <% } %>
      </div>
    </div>

  </div>
</div>
