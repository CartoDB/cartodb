<div class="Editor-HeaderInfoEditor">
  <button class="u-rSpace--xl u-actionTextColor js-back">
    <i class="CDB-IconFont CDB-IconFont-arrowPrev Size-large"></i>
  </button>
  <div class="Editor-HeaderInfo-inner">
    <div class="Editor-HeaderInfo-title u-bSpace">
      <h2 class="Editor-HeaderInfo-titleText CDB-Text CDB-Size-huge is-light u-ellipsis"><%- title %></h2>
    </div>
    <div class="u-flex">
      <span
        class="SelectorLayer-letter CDB-Text CDB-Size-small u-whiteTextColor u-rSpace--m u-upperCase"
        style="background-color: <%- sourceColor %>;"><%- source %></span>
      <p class="CDB-Text CDB-Size-medium u-altTextColor u-ellipsis"><%- layerName %></p>
    </div>
  </div>
</div>
