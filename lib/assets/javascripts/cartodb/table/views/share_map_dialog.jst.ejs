<div>
  <div class="cartodb-map-wrapper">
    <div class="cartodb-header">
      <h1><%- title %></h1>
      <p ><%- description %></p>
      <div class="social">
        <a class="facebook">Facebook</a>
        <a class="twitter">Twitter</a>
      </div>
    </div>
  </div>
  <div class="sharing_options">
    <h5>Sharing options</h5>
    <ul class="switches">
      <li class="title">Table name</li>
      <li class="description">Description</li>
      <li class="search">Search box</li>
      <li class="shareable">Shareable</li>
      <% if (special_user) { %><li class="cartodb_logo">Logo</li><% } %>
    </ul>
  </div>
</div>

<div class="margin30 copy">
  <label class="uppercase smaller strong lighter">Copy and paste this code into your website</label>
  <input class="url" type="text" value="http://cartodb.com" readonly />
  <a class="tooltip copy" href="#copy" title="Copy this">copy</a>
</div>