<%- if Cartodb::Central.api_sync_enabled? %>

    <div class="Filters is-relative js-org-subheader Filters__margin-fix">
    <div class="Filters-inner">
      <span class="Filters-separator"></span>
      <div class="Filters-row">
        <ul class="Filters-group">
          <li class="Filters-typeItem">
            <a href="<%= CartoDB.url(self, 'api_key_credentials', user: current_user) %>" class=" CDB-Text CDB-Size-medium Filters-typeLink <%= 'is-selected' if "#{params[:controller]}_#{params[:action]}" == "admin/client_applications_api_key" %>">
              API Keys
            </a>
          </li>

          <li class="Filters-typeItem">
            <a href="<%= CartoDB.base_url_from_user(current_user) %>/dashboard/oauth_apps" class="CDB-Text CDB-Size-medium Filters-typeLink">
              Oauth apps
            </a>
          </li>

          <% if current_user.mobile_sdk_enabled? %>
            <li class="Filters-typeItem">
              <a href="<%= CartoDB.url(self, 'mobile_apps', user: current_user) %>" class="CDB-Text CDB-Size-medium Filters-typeLink <%= 'is-selected' if "#{params[:controller]}" == "carto/admin/mobile_apps" %>">
                Mobile apps
              </a>
            </li>
          <% end %>
        </ul>

        <% if "#{params[:controller]}_#{params[:action]}" == "carto/admin/mobile_apps_index" %>
          <ul class="Filters-group">
            <a href="<%= CartoDB.url(self, 'new_mobile_app', user: current_user) %>" class="CDB-Button CDB-Button--primary">
              <span class="CDB-Button-Text CDB-Text is-semibold CDB-Size-small u-upperCase">New application</span>
            </a>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

<% else %>

  <div class="FormAccount-title">
    <p class="FormAccount-titleText">The simplest way to access your private data</p>
  </div>

<% end %>
