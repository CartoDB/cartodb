<div class="CDB-Text PublicMap-secondary">
  <div class="u-inner">
    <div class="PublicMap-block">
      <div class="PublicMap-leftBlock PublicMap-leftBlock--large">
        <div class="js-user-meta">
          <h1 class="PublicMap-title js-PublicMap-title Title Title--m"><%- name %></h1>

          <% if (description) { %>
            <div class="PublicMap-description">
              <%- description %>
            </div>
            <% } %>

              <div class="PublicMap-meta">
                <!--  Updated at -->
                <ul class="PublicMap-metaList">
                  <li class="PublicMap-metaItem">
                    <i class="PublicMap-metaIcon CDB-IconFont CDB-IconFont-calendar"></i> Updated
                    <%- ago %>
                  </li>
                </ul>

                <!--  Mapviews -->
                <ul class="PublicMap-metaList PublicMap-metaList--mobile js-PublicMap-metaList--mobile">
                  <li class="PublicMap-metaItem">
                    <i class="PublicMap-metaIcon CDB-IconFont CDB-IconFont-stats"></i>
                    <%- totalMapViews %>
                  </li>

                  <!--  Tags -->
                  <% if (formattedTags.length > 0) { %>
                    <li class="PublicMap-metaItem">
                      <i class="PublicMap-metaIcon CDB-IconFont CDB-IconFont-label"></i>

                      <% formattedTags.forEach(function(tag, index) { %>
                        <a class="PublicMap-metaLink" href="<%- tagUrl %>/<%- tag %>">
                          <%- tag %>
                        </a>
                        <% if ( index !== formattedTags.length - 1) { %>,
                          <% } %>
                            <% }); %>

                              <% if (overflowTags) {%>
                                <span>and <%- overflowTags %> more</span>
                                <% } %>
                    </li>
                    <% } %>
                </ul>
              </div>
              <a class="Navmenu-editLink Navmenu-editLink--more js-Navmenu-editLink--more" href="#/more">More info</a>
        </div>
      </div>
    </div>
  </div>

  <!-- TODO Datasets -->

  <!--  DISQUS -->
  <% if (disqusShortname) { %>
    <div class="u-inner js-disqus"></div>
  <% } %>
