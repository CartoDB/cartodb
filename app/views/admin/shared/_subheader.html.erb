<div class="subheader <%= 'active' if @tables_count > 0 %>">
  <section class="stats">
    <div class="inner">
      <ul>
        <li class="tables">
          <div class="progress">
            <span class="" style="width:2%"></span>
          </div>
          <p class="center"><strong>0 of 0</strong> tables created</p>
        </li>
        <li class="size">
          <div class="progress">
            <span class="" style="width:2%"></span>
          </div>
          <p class="center"><strong>0 of 0</strong> <%= @bytes %> used</p>
        </li>
        <li class="mapviews">
        <div class="progress">
          <span class="" style="width:2%"></span>
        </div>
          <p class="center"><strong>0</strong> map views the last 21 days</p>
        </li>
        <li class="badge">
          <i class="<%= current_user.account_type_name %>"></i>
        </li>
      </ul>
    </div>
    </section>
  <section class="warning">
    <div class="inner">
      <p class="dark limit">Hey <strong><%= current_user.username %></strong>, looks like you're about to reach your account limit. Start thinking about <%= link_to "upgrading your plan", upgrade_url, :class => "underline" %>.</p>
      <p class="dark upgraded">Great! Welcome to your brand new <strong><%= current_user.account_type.capitalize %></strong> CartoDB. Now we love you even more than before ;)</p>
      <a href="#close" class="smaller close">x</a>
    </div>
  </section>
</div>
