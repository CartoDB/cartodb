<ul>
  <li>
    <div class="circle <%= state %>">
      <span class="point"></span>
      <span class="pulse"></span>
    </div>
  </li>
  <li>
    <p>
      <% if (state === "success") { %>
        Synced <%= ran_at %>.
      <% } else if (state === "syncing") { %>
        Syncing.
      <% } else if (state === "failure") { %>
        Synced failed.
      <% } %>
      
      <% if (state === "success") { %>
        Next automatic sync will be <%= run_at %>.
      <% } else if (error_code || error_message) { %>
        Error code <%= error_code %>: <%= error_message %>.
      <% } %>
    </p>
  </li>

  <% if (state !== "syncing" && state !== "failure") { %>
    <li class="separator sync_now">
      <% if (canSync) { %>
        <p><a href="#/sync-now" class="sync_now">sync now</a></p>
      <% } else { %>
        <p class="italic light sync_now_disabled">sync now</p>
      <% } %>
    </li>
  <% } %>

  <% if (state !== "syncing") { %>
    <li class="separator">
      <p><a href="#/view-options" class="sync_options">view options</a></p>
    </li>
  <% } %>
</ul>