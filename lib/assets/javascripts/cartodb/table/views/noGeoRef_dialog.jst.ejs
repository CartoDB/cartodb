<div class="mamufas">
  <section class="block modal <%- modal_type %>">
    <div class="innerBlock">
      <div class="head">
        <h3><%- title %></h3>
        <% if (description) { %>
          <p class="margin5"><%- description %></p>
        <% } %>
      </div>
      <div class="content"></div>
      <div class="foot">
        <a href="#/cancel" class="left cancel <%- cancel_button_classes %>"><%- cancel_title %></a>
        <a href="#/go" class="right ok <%- ok_button_classes %>"<% if(hasContent == true) {%> disabled="disabled" <%}%>><%- ok_title %></a>
      </div>
    </div>
  </section>
</div>