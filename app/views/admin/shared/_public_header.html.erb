<header class="cartodb-public-header">
  <div class="inner">
    <h1><%= link_to "CartoDB", "http://www.cartodb.com", :id => "the_logo", :class => "logo" %></h1>
    <ul class="options">
      <li><a href="http://cartodb.com/gallery" class="gallery">gallery</a><li>
      <% if clone %>
        <li><a href="http://cartodb.com/login">Clone this</a><li>
      <% end %>
      <% if ( Cartodb.config[:account_host] == "cartodb.com") %>
        <li><a class="signup" href="http://cartodb.com/signup">Sign up</a><li>
      <% end %>
      <li><a href="http://cartodb.com/login" class="border login">Login</a></li>
    </ul>
  </div>
</header>