    <table>

      <% tables.each do |data| %>

        <tr>
          <td class="name">
            <a href="<%= data[:url] %>" class="name"><%= data[:name] %></a>
            <p><%= data[:description] %></p>
          </td>

          <td class="info">
            <div class="stats"><%= raw [data[:size], data[:rows]].compact.join(" &middot; ") %></div>
            <% if data[:author] %>
