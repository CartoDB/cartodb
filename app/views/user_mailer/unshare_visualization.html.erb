<% content_for(:subject) { @subject } %>

<% content_for :body do %>
  <tr>
    <td>
      <!-- HEADER -->
      <table width="100%" border="0" cellspacing="0" cellpadding="0" style="background-color: #ffffff; border: 1px solid #dddddd; border-bottom: 0; border-collapse: separate !important; border-top-left-radius: 4px; border-top-right-radius: 4px; width: 100% !important;">
        <tr>
          <td align="left" style="padding: 40px 50px 40px 50px; font-weight: bold; font-size: 25px; font-family: Helvetica, Arial, sans-serif; color: #333333;"><%= @subject %></td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <!-- CONTENT -->
      <table cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #ffffff; border: 1px solid #dddddd; border-bottom: 1px solid #cccccc; border-bottom-left-radius: 4px; border-bottom-right-radius: 4px; width: 100% !important;">
        <tr>
          <td valign="top" style="padding: 0;">
            <table cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #FEFAF4; margin-bottom: 40px; border-bottom: 1px solid #dddddd; width: 100% !important;">
              <tr>
                <td align="left" style="padding: 40px 50px 40px 50px; font-family: Helvetica, Arial, sans-serif;">
                  <p style="margin: 0; font-size: 16px; line-height: 25px; color: #666666;">Your colleague <%= @visualization_owner_name %> has stopped sharing the map <strong><%= @visualization_name %></strong> with you so it may dissapear from your dashboard.</p>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
<% end %>

<% content_for :footer do %>
  <% if @user.has_feature_flag?("notifications_management") %>
    <tr>
      <td style="padding: 20px 0px 0 0px;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
          <tr>
            <td align="center" valign="middle" style="font-size: 12px; line-height: 18px; font-family: Helvetica, Arial, sans-serif; color:#999;">
              If you don't want to receive this email again, you may cancel the subscription clicking in this <a href="<%= @unsubscribe_link %>" style="color: #0090D7;">link</a>
            </td>
          </tr>
        </table>
      </td>
    </tr>

    <tr>
      <td style="padding: 10px 0px 20px 0px;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
          <tr>
            <td align="center" valign="middle" style="font-size: 12px; line-height: 18px; font-family: Helvetica, Arial, sans-serif; color:#999;">
              &copy; <%= Time.now.year %> CartoDB
            </td>
          </tr>
        </table>
      </td>
    </tr>
  <% else %>
    <tr>
      <td style="padding: 20px 0px 20px 0px;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
          <tr>
            <td align="center" valign="middle" style="font-size: 12px; line-height: 18px; font-family: Helvetica, Arial, sans-serif; color:#999;">
              &copy; <%= Time.now.year %> CartoDB
            </td>
          </tr>
        </table>
      </td>
    </tr>
  <% end %>
<% end %>
