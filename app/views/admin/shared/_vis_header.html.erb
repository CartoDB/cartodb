<header class="vis">
  <div class="inner map_toolbar">

    <div class="header_content">
      <div class="left header_block">
        <ul class="actions">
          <% if @visualization.visualization.type != 'table' %>
          <li class="button search-bar-container" style="margin-right:0;">
            <input id="search-bar-input" type="text" class="Form-input search-bar-input" placeholder="&lt;Search for Dataset&gt;" />
          </li>
          <li style="margin-left:0"><a class="Button add_new_layer" href="#/add-new-layer">Browse</a></li>
          <li><a class="dropdown add_overlay button" href="#">Annotate</a></li>
          <% end %>
          <li><div class="vis_navigation">
            <nav>
              <%= link_to "Map",  "#/map",   :class => "smaller strong tab button" %>
              <%= link_to "Table", "#/table", :class => "smaller strong tab hidden button" %>
            </nav>
          </div></li>
          <li><div class="sync_status"></div></li>
          <% if @visualization.visualization.type == 'table' %>
          <li><div><h3 style="color:#FBB257">Editing Mode</h3></div></li>
          <% end %>
        </ul>
      </div>

      <div class="right header_block">
        <ul class="options">
          <li><%= link_to "Actions", "#/options", :class => "rounded btn dropdown options" %></li>
          <li><a class="rounded btn share" href="#/visualize"><span>Export</span></a></li>
        </ul>
      </div>

      <div class="globalerror"></div>
    </div>
  </div>
</header>
