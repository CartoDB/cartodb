<ul class="CreateDialog-headerSteps">
  <% if (type === "dataset") { %>
    <li class="CreateDialog-headerStep is-selected">
      <div class="Dialog-headerIcon">
        <i class="CDB-IconFont CDB-IconFont-add"></i>
      </div>
      <h2 class="CDB-Text CDB-Size-large u-mainTextColor u-bSpace">Connect dataset</h2>
      <h3 class="CDB-Text CDB-Size-medium u-altTextColor">Connect datasets from external services or upload your data files.</h3>
    </li>
  <% } else { %>
    <li class="CreateDialog-headerStep <%- option === "listing" || option === "loading" ? 'is-selected' : '' %>">
      <div class="Dialog-headerIcon">
        <i class="CDB-IconFont CDB-IconFont-add"></i>
      </div>
      <h2 class="CDB-Text CDB-Size-large u-mainTextColor u-bSpace">Add datasets</h2>
      <h3 class="CDB-Text CDB-Size-medium u-altTextColor">Select your datasets</h3>
    </li>
  <% } %>
</ul>